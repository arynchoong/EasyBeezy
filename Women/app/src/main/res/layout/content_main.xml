                    android:paddingStart="6dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName2"
                    android:layout_toRightOf="@id/imageView2"
                    android:id="@+id/ivLocation2"
                    android:src="@drawable/ic_place_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName2"
                    android:layout_toRightOf="@id/ivLocation2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Blk 111 Ang Mo Kio Ave 1"
                    android:id="@+id/tvLocation2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLocation2"
                    android:layout_toRightOf="@id/imageView2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="14:00 Today"
                    android:id="@+id/tvTime2" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trAddItem4"
            android:layout_margin="@dimen/design_navigation_separator_vertical_padding">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/abc_floating_window_z"
                android:clickable="true"
                android:onClick="showDetailAcitivty">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Water Plants"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:id="@+id/tvRequestType4"
                    android:layout_alignParentTop="true"/>

                <ImageView
                    android:layout_width="60dp"
