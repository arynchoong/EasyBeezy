                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Blk 111 Ang Mo Kio Ave 1"
                    android:id="@+id/tvLocation4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLocation4"
                    android:layout_toRightOf="@id/imageView4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Today"
                    android:id="@+id/tvTime4" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trAddItem3"
            android:layout_margin="@dimen/design_navigation_separator_vertical_padding">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/abc_floating_window_z"
                android:onClick="showDetailAcitivty"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Borrow Household Item"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:id="@+id/tvRequestType3"
                    android:layout_alignParentTop="true"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
