    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutEditItems"
        android:dividerPadding="@dimen/design_navigation_separator_vertical_padding">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trAddItem1"
            android:layout_margin="@dimen/design_navigation_separator_vertical_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/abc_floating_window_z"
                android:clickable="true"
                android:onClick="showDetailAcitivty">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Seeking Running Buddy"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"
                    android:id="@+id/tvRequestType1"
                    android:layout_alignParentTop="true"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageView1"
                    android:src="@drawable/profilepic1"
                    android:foregroundTintMode="src_over"
                    android:layout_below="@id/tvRequestType1"
                    android:scaleType="fitXY" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvRequestType1"
                    android:layout_toRightOf="@id/imageView1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Aryn C."
                    android:id="@+id/tvName1"
                    android:paddingLeft="6dp"
                    android:paddingStart="6dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName1"
                    android:layout_toRightOf="@id/imageView1"
                    android:id="@+id/ivLocation1"
                    android:src="@drawable/ic_place_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName1"
                    android:layout_toRightOf="@id/ivLocation1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Blk 111 Ang Mo Kio Ave 1"
                    android:id="@+id/tvLocation1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLocation1"
                    android:layout_toRightOf="@id/imageView1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=" 21:00 Mondays"
                    android:id="@+id/tvTime1" />
            </RelativeLayout>
        </TableRow>
