<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aryn.women">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectRequestOption"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_select_request_option"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".SelectRequestType"
            android:label="@string/title_activity_select_request_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddRequestDetails"
            android:label="@string/title_activity_add_request_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".request_type"
            android:label="@string/title_activity_request_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowRequestDetails"
            android:label="@string/title_activity_show_request_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Statistics" />
        <activity android:name=".Buddy" />
        <activity android:name=".Articles"></activity>
    </application>

</manifest>
